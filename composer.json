{
    "name": "root123/e-medicine-website",
    "description": "E-Medicine Website Project",
    "require": {
        "phpmailer/phpmailer": "^6.5",
        "tecnickcom/tcpdf": "^6.8",
        "mpdf/mpdf": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('vendor/autoload.php') || exit('Install Composer first');\""
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}
